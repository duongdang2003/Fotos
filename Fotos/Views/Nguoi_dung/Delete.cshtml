@model Models.Framework.Nguoi_dung

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>User</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Username
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.ten_nguoi_dung)
                </dd>

                <dt>
                    Email
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt>
                    Password
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.mat_khau_hashed)
                </dd>

                <dt>
                    Salt
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.salt)
                </dd>

                <dt>
                    Fullname
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.ten_day_du)
                </dd>

                <dt>
                    Phonenumber
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.so_dien_thoai)
                </dd>

                <dt>
                    Start date
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.ngay_dang_ky)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group mt-4">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("Index", "Nguoi_dung")" class="edit-link mt-4" style="text-decoration: none;">
                                <i class="fa-solid fa-chevron-left"></i> Back to List
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
