@model Models.Framework.Danh_gia_album

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h2>Details</h2>

        <div>
            <h4>Album comment</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Title
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.Album.tieu_de_album)
                </dd>

                <dt>
                    Username
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.Nguoi_dung.ten_nguoi_dung)
                </dd>

                <dt>
                    Comment
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.binh_luan)
                </dd>

                <dt>
                    Comment date
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.ngay_binh_luan)
                </dd>

            </dl>
        </div>

        <p>
            <a href="@Url.Action("Index", "Danh_gia_album")" class="edit-link mt-4" style="text-decoration: none;">
                <i class="fa-solid fa-chevron-left"></i> Back to List
            </a>|
            @Html.ActionLink("Edit", "Edit", new { id = Model.id_danh_gia }, new { style = "text-decoration: none;" })
        </p>

    </div>
</main>

