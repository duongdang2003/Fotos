@model Models.Framework.Album

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Album</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Username
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.Nguoi_dung.ten_nguoi_dung)
                </dd>

                <dt>
                    Number of photos
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.so_luong_anh)
                </dd>

                <dt>
                    Title
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.tieu_de_album)
                </dd>

                <dt>
                    Description
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.mo_ta_album)
                </dd>

                <dt>
                    Creation date
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.ngay_tao_album)
                </dd>

                <dt>
                    Number of comments
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.so_luot_danh_gia)
                </dd>

                <dt>
                    Number of likes
                </dt>

                <dd class="border border-primary p-2 rounded">
                    @Html.DisplayFor(model => model.so_luot_thich)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group mt-4">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("Index", "Albums")" class="edit-link mt-4" style="text-decoration: none;">
                                <i class="fa-solid fa-chevron-left"></i> Back to List
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            }
        </div>


    </div>
</main>


