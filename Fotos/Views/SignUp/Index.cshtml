@model Models.Framework.Nguoi_dung

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_LogoNavBar.cshtml";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Transparent Login Form UI</title>
    <link rel="stylesheet" href="~/assets/sign in/css/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
    <div class="bg-img">
        <div class="content">
            <header>Sign Up</header>
            @using (Html.BeginForm("Create", "SignUp", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="field">
                    <span class="fa fa-user"></span>
                    @Html.TextBoxFor(m => m.ten_nguoi_dung, new { @placeholder = "Username", @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.ten_nguoi_dung, "", new { @class = "text-danger" })
                </div>
                <div class="field space">
                    <span class="fa fa-lock"></span>
                    @Html.PasswordFor(m => m.mat_khau_hashed, new { @placeholder = "Password", @class = "form-control pass-key", required = "required" })
                    <span class="show">SHOW</span>
                    @Html.ValidationMessageFor(m => m.mat_khau_hashed, "", new { @class = "text-danger" })
                </div>
                <div class="field space">
                    <span class="fa fa-user"></span>
                    @Html.TextBoxFor(m => m.ten_day_du, new { @placeholder = "Full Name", @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.ten_day_du, "", new { @class = "text-danger" })
                </div>
                <div class="field space">
                    <span class="fa fa-envelope"></span>
                    @Html.TextBoxFor(m => m.email, new { @placeholder = "Email", @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                </div>
                <div class="field space">
                    <span class="fa fa-phone"></span>
                    @Html.TextBoxFor(m => m.so_dien_thoai, new { @placeholder = "Phone Number", @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.so_dien_thoai, "", new { @class = "text-danger" })
                </div>
                <div class="field space">
                    <span class="fa fa-phone"></span>
                    @Html.TextBoxFor(m => m.salt, new { @placeholder = "Salt", @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.salt, "", new { @class = "text-danger" })
                </div>
                <div class="field" style="margin: 10px 0">
                    <input type="submit" value="Sign Up" class="btn btn-default">
                </div>
            }
        </div>
    </div>
    <script>
        const passField = document.querySelector('.pass-key');
        const showBtn = document.querySelector('.show');
        showBtn.addEventListener('click', function () {
            if (passField.type === "password") {
                passField.type = "text";
                showBtn.textContent = "HIDE";
                showBtn.style.color = "#3498db";
            } else {
                passField.type = "password";
                showBtn.textContent = "SHOW";
                showBtn.style.color = "#222";
            }
        });
    </script>
</body>
</html>
